---
layout: default
meta_title: Categories
meta_description: Categories page description
body_class: categories
title: Categories
pagination:
  data: collections
  size: 1
  alias: category
permalink: /category/{{ category }}/
---

<main id="main" class="flex flex-col flex-1 py-10 main inner lg:py-20 focus:outline-none" tabindex="-1">

    <article id="container-centre" class="flex-1 column centre">

        <header>
            <h1 class="mb-16 text-3xl text-purple-900 page-title md:text-center md:text-5xl lg:mb-24 lg:text-6xl">Category â€” {{ category | capitalize }}</h1>
        </header>

        <div class="posts">

            {% for post in collections[category] %}

                <article class="pb-8 mb-8 text-gray-500 border-b border-gray-200">

                    <h2 class="mb-3 text-4xl"><a class="block text-purple-500 hover:text-purple-900" href="{{ post.url }}">{{ post.data.title }}</a></h2>

                    <time datetime="{{ post.date }}">
                        {{ post.date | dateDisplay }}
                    </time>

                </article>

            {% endfor %}
        </div>

    </article>

</main>
