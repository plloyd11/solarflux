<div class="mt-12 global--form lg:mt-32">
  <h4 class="text-3xl font-semibold text-center text-white">Inquiries</h4>
  <div class="max-w-screen-lg px-4 py-5 mx-auto mt-6 bg-white shadow-lg lg:my-12 sm:rounded-lg sm:p-6">
    <form name="contact form" method="POST" data-netlify="true" netlify-honeypot="bot-field" action="/thank-you">
      <p class="hidden">
        <label>Donâ€™t fill this out if you're human:
          <input name="bot-field"/></label>
      </p>
      <div class="grid grid-cols-12 gap-6">
        <div class="col-span-6">
          <label for="first_name" class="block text-sm font-medium leading-5 text-gray-700">First name</label>
          <input name="First Name" id="first_name" required="required" type="text" class="block w-full px-3 py-2 mt-1 transition duration-150 ease-in-out border border-gray-300 rounded-md shadow-sm form-input focus:outline-none focus:shadow-outline-blue focus:border-blue-300 sm:text-sm sm:leading-5"/>
        </div>

        <div class="col-span-6">
          <label for="last_name" class="block text-sm font-medium leading-5 text-gray-700">Last name</label>
          <input name="Last Name" id="last_name" required="required" type="text" class="block w-full px-3 py-2 mt-1 transition duration-150 ease-in-out border border-gray-300 rounded-md shadow-sm form-input focus:outline-none focus:shadow-outline-blue focus:border-blue-300 sm:text-sm sm:leading-5"/>
        </div>

        <div class="col-span-6">
          <label for="email_address" class="block text-sm font-medium leading-5 text-gray-700">Email address</label>
          <input name="Email Address" id="email_address" type="email" required="required" placeholder="name@email.com" class="block w-full px-3 py-2 mt-1 transition duration-150 ease-in-out border border-gray-300 rounded-md shadow-sm form-input focus:outline-none focus:shadow-outline-blue focus:border-blue-300 sm:text-sm sm:leading-5"/>
        </div>

        <div class="col-span-6">
          <label for="phone" class="block text-sm font-medium leading-5 text-gray-700">Phone</label>
          <input name="phone" type="tel" id="phone" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" required="required" placeholder="555-555-5555" class="block w-full px-3 py-2 mt-1 transition duration-150 ease-in-out border border-gray-300 rounded-md shadow-sm form-input focus:outline-none focus:shadow-outline-blue focus:border-blue-300 sm:text-sm sm:leading-5"/>
        </div>

        <div class="col-span-6">
          <label for="company" class="block text-sm font-medium leading-5 text-gray-700">Company</label>
          <input name="Company" required="required" id="company" type="text" class="block w-full px-3 py-2 mt-1 transition duration-150 ease-in-out border border-gray-300 rounded-md shadow-sm form-input focus:outline-none focus:shadow-outline-blue focus:border-blue-300 sm:text-sm sm:leading-5"/>
        </div>

        <div class="col-span-6">
          <label for="subject" class="block text-sm font-medium leading-5 text-gray-700">Subject</label>
          <input name="Subject" required="required" id="subject" type="text" class="block w-full px-3 py-2 mt-1 transition duration-150 ease-in-out border border-gray-300 rounded-md shadow-sm form-input focus:outline-none focus:shadow-outline-blue focus:border-blue-300 sm:text-sm sm:leading-5"/>
        </div>

        <div class="col-span-12">
          <label for="message" class="block text-sm font-medium leading-5 text-gray-700">Message</label>
          <textarea name="Message" required="required" id="message" type="text" placeholder="Write your message" rows="4" class="block w-full px-3 py-2 mt-1 transition duration-150 ease-in-out border border-gray-300 rounded-md shadow-sm form-input focus:outline-none focus:shadow-outline-blue focus:border-blue-300 sm:text-sm sm:leading-5"></textarea>
        </div>

        <div class="col-span-12">
          <button type="submit" class="w-full py-2 font-semibold text-white rounded-md bg-primaryPurple font-display">Submit</button>
        </div>

      </div>
    </form>
  </div>
</div>